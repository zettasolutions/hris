<%@ plsql procedure="train_sponsor_form" %>
<%@ plsql parameter="p_module_id"     type="NUMBER"   default="NULL"%>
<%@ plsql parameter="p_spsr_code"     type="VARCHAR2" default="NULL"%>
<%!
