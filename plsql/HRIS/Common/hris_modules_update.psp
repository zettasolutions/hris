<%@ plsql procedure="hris_modules_update" %>
<%@ plsql parameter="p_module_id"       type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_module_name"     type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_module_url"      type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_module_desc"     type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_module_group_id" type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_sysgroup"        type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_seq_no"          type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_ismenu"          type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_proc_desc"       type="zsi_lib.VC2_255_ARR"%>
<%@ plsql parameter="p_proc_type"       type="zsi_lib.VC2_255_ARR"%>
<%!
