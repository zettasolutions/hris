<%@ plsql procedure="train_conv_list" %>
<%@ plsql parameter="p_conv_code"   type="NUMBER"   default="NULL"%>
<%@ plsql parameter="p_conv_desc"   type="VARCHAR2" default="NULL"%>
<%@ plsql parameter="p_rows"        type="NUMBER"   default="NULL"%>
<%@ plsql parameter="p_page_no"     type="NUMBER"   default="1"%>
<%!
