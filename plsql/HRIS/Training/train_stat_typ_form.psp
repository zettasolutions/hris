<%@ plsql procedure="train_stat_typ_form" %>
<%@ plsql parameter="p_module_id"      type="NUMBER"   default="NULL"%>
<%@ plsql parameter="p_trn_status"     type="VARCHAR2" default="NULL"%>
<%!
